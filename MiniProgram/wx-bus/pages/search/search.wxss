/* pages/search/search.wxss */

page {
  height: 100%;
}

.c-Wrap {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.c-Search {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx 20rpx;
  color: #333;
  font-size: 28rpx;
  box-shadow: 0 0 10rpx 0 #ccc;
}

.c-Search-input {
  flex: 1 1 auto;
  margin-left: 10rpx;
}

.c-Search-clear {
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding: 10rpx;
}

.c-Search-btn {
  padding: 0 20rpx;
}

.c-Panel {
  flex: 1 1 auto;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx 0 #ccc;
  padding: 20rpx;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.c-List {
  color: #333;
  font-size: 28rpx;
}

.c-List-item {
  padding: 20rpx;
}

.c-List-clearHistory {
  padding: 20rpx;
  text-align: center;
}

.c-List-item +.c-List-item, .c-List-clearHistory {
  position: relative;
}

.c-List-item +.c-List-item::after, .c-List-clearHistory::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #c7c7c7;
  color: #c7c7c7;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.c-List-hd {
  display: block;
  background-color: #fafafa;
  width: 100%;
  padding: 10rpx;
  box-sizing: border-box;
}

.c-NoResult {
  margin-top: 250rpx;
  text-align: center;
  color: #333;
  font-size: 28rpx;
}
