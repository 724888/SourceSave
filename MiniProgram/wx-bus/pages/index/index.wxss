.c-TopBar {
  display: flex;
  padding: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 10rpx 0 #ccc;
  background-color: #fff;
}

.c-Logo {
  width: 120rpx;
  height: 80rpx;
}

.c-Logo>image {
  display: block;
  width: 100%;
  height: 100%;
}

.c-FakeSearch {
  padding: 10rpx 10rpx 10rpx 20rpx;
  display: flex;
  align-items: center;
  flex: 1 1 auto;
  font-size: 28rpx;
  color: #666;
}

.c-FakeSearch text {
  margin-left: 20rpx;
}

.c-LineList {
  margin: 0 20rpx;
  color: #666;
  box-shadow: 0 0 10rpx 0 #ccc;
}

.c-LineList-hd {
  background-color: #fafafa;
  font-size: 30rpx;
  padding: 20rpx;
  border-radius: 10rpx 10rpx 0 0;
  display: flex;
  justify-content: space-between
}

.c-LineList-bd {
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
}

.c-LineList-item {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 20rpx;
  font-size: 24rpx;
  align-items: center;
}

.c-LineList-item+.c-LineList-item {
  position: relative;
}

.c-LineList-item+.c-LineList-item::after {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  border-top: 1px solid #c7c7c7;
  color: #c7c7c7;
  transform-origin: 0 0;
  transform: scaleY(0.5);
}

.c-LineList-name {
  color: #333;
  font-size: 28rpx;
}

.c-LineList-main {
  width: 50%;
}

.c-LineList-extra {
  flex: 0 0 auto;
}

 
